<% i=0 %>
<% @designs.each do |design| %>

  <%
    photo_urls = Array.new
    if( design.photos.count > 4 )
      take_count = 4
    else
      take_count = design.photos.count
    end

    if(take_count > 0)
      photos = design.photos.take(take_count);
      photos.each { |photo| photo_urls << photo.image.url};
    end

    img_url = "default_final.jpg"
    photo_urls.fill(img_url, take_count, 4-take_count)
  %>

  <% if i % 3 == 0 %> <div class="row"> <% end %>
  <div class="col-sm-6 col-md-4">
    <div id="profile-widget" class="panel">
      <div class="panel-image">
        <a href=<%= design_path(design)%>>
          <%= image_tag(photo_urls[0], class: "panel-image-preview")%></a>
          <!-- <img class="panel-image-preview" src=<%= design.pic.url %>></a> -->
      </div>
      <div class="panel-body">
        <div class="media">
          <a class="pull-left" href="#">
            <%= image_tag design.designer.avatar.url(:thumbnail) %>
          </a>
          <div class="media-body">
            <div class="list-block">
              <ul>
                <li>
                  <%= image_tag(photo_urls[1], :class=>"block_thumb") %>
                </li>
                <li class="">
                  <%= image_tag(photo_urls[2], :class=>"block_thumb") %>
                </li>
                <li>
                  <%= image_tag(photo_urls[3], :class=>"block_thumb") %>
                </li>
              </ul>
            </div>
            </br>
            <h4 class="media-heading"><%= design.name%>-<%= design.household%></h4>
            <p><%= link_to(design.designer.name, design_path(design)) %></p>
            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <div class="btn-group btn-group-justified">
          <a class="btn btn-default" role="button"><i class="fa fa-eye"></i> 172</a>
          <a class="btn btn-default" role="button"><i class="fa fa-comment"></i> 34</a>
          <a class="btn btn-default highlight" role="button"><i class="fa fa-heart"></i> 210</a>
        </div>
      </div>
    </div>
  </div>

  <% if ((i % 3 == 2) ) %>  </div> <% end %>
  <% i += 1 %>
<% end %>
</div>

<h1>Listing designs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Stage</th>
      <th>Style</th>
      <th>Household</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @designs.each do |design| %>
      <tr>
        <td><%= design.name %></td>
        <td><%= design.stage %></td>
        <td><%= design.style %></td>
        <td><%= design.household %></td>
        <td><%= design.author %></td>
        <td><%= link_to 'Show', design %></td>
        <td><%= link_to 'Edit', edit_design_path(design) %></td>
        <td><%= link_to 'Destroy', design, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @design.name %>
</p>

<p>
  <strong>Stage:</strong>
  <%= @design.stage %>
</p>

<p>
  <strong>Style:</strong>
  <%= @design.style %>
</p>

<p>
  <strong>Household:</strong>
  <%= @design.household %>
</p>

<p>
  <strong>Author:</strong>
  <%= @design.author %>
</p>

<%= link_to 'Edit', edit_design_path(@design) %> |
<%= link_to 'Back', designs_path %>

<% @design.comments.each do |comment| %>
  <p>
    <strong>Label:</strong>
    <%= comment.label %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.content %>
  </p>
<% end %>

<%= form_for([@design, @design.comments.build]) do |f| %>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :label %><br>
    <%= f.text_field :label %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

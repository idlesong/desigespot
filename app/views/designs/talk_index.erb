<% i=0 %>
<% @designs.each do |design| %>
  <% if i % 4 == 0 %> <div class="row"> <% end %>

  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
      <%= link_to  design do %>
        <%= image_tag("design_demo.png", :alt => "show", :class => "show") %>
      <% end %>

      <div class="caption">
        <h3>子昂雅苑二期</h3>
        <p>上海嘉定-两房一厅</p>
        <p><a href="#">孙立平</a></p>
      </div>
    </div>
  </div>

  <% if ((i % 4 == 3) ) %>  </div> <% end %>
  <% i += 1 %>
<% end %>

<h1>Listing designs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Stage</th>
      <th>Style</th>
      <th>Household</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @designs.each do |design| %>
      <tr>
        <td><%= design.name %></td>
        <td><%= design.stage %></td>
        <td><%= design.style %></td>
        <td><%= design.household %></td>
        <td><%= design.author %></td>
        <td><%= link_to 'Show', design %></td>
        <td><%= link_to 'Edit', edit_design_path(design) %></td>
        <td><%= link_to 'Destroy', design, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


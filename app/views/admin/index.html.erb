<div id="profile-widget" class="panel">
  <div class="panel-image">
    <%= image_tag("bg_profile.jpg", :class=>"panel-image-preview")%>
  </div>
  <div class="panel-body">
    <div class="media">
      <a class="pull-left" href="#">
        <img class="media-object img-circle"  src=<%= @designer.avatar.url %>>
      </a>
      <div class="media-body">
        <h2 class="media-heading"><%= @designer.name %></h2>
        <span>设计宣言：Beautiful is a life style, I will look for it for ever!
        </span>

      </br>
      <span>
        所在地：<%= @designer.location %>
        擅长户型：<%= @designer.prefer_household %>
        擅长风格：<%= @designer.prefer_style %>
        <%= link_to 'edit', edit_designer_path(@designer), :class =>"btn btn-xs" %>

        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#myModal">
          <i class="fa fa-cloud-upload"></i>上传作品
        </button>
      </span>
    </div>
  </div>
</div>
<div class="panel-footer">
  <div class="btn-group btn-group-justified">
    <a class="btn btn-default" role="tab" href="#designs" data-toggle="tab"><i class="fa fa-eye"></i> 172</a>
    <a class="btn btn-default" role="tab" href="#topics" data-toggle="tab"><i class="fa fa-comment"></i> 34</a>
    <a class="btn btn-default highlight" role="tab" href="#likes" data-toggle="tab"><i class="fa fa-heart"></i> 210</a>
  </div>
</div>
</div>


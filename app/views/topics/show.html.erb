<div class="row">
  <div class="col-xs-6 col-md-9">

    <p id="notice"><%= notice %></p>

    <h3><%= @topic.title %></h3>
    <hr>

    <div>
      <p>
      <%= link_to(image_tag(@topic.designer.avatar.url(:thumbnail)), @topic.designer) %>
      <%= @topic.designer.name %>
      <%= @topic.updated_at %>
      </p>
      <p>
      <%= @topic.content %>

      <%= link_to 'Edit',  edit_topic_path(@topic) %>
      </p>
    </div>

    <% @topic.replies.each do |reply| %>
    <hr>
    <div>
      <p><%= link_to(image_tag(reply.designer.avatar.url(:thumbnail)),  reply.designer) %>
          <%= reply.designer.name %>

          <i class="fa fa-pencil"></i>
          <%= reply.updated_at %><i class="fa fa-heart"></i><i class="fa fa-mail-reply"></i>
      </p>
      <p><%= reply.content %></p>
    </div>
    <% end %>

    <%= render 'shared/reply_form', topic: @topic %>
  </div>

  <div class="col-xs-6 col-md-3">
    <a href="#">我的设计</a>
    <% i=0 %>
    <% @admin.designs.each do |design| %>
    <% if i % 3 == 0 %> <div class="row"> <% end %>

      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%= link_to  design do %>
          <%= image_tag("design_demo.png", :alt => "show", :class => "show") %>
          <% end %>
        </div>
      </div>

      <% if ((i % 3 == 2) ) %>  </div> <% end %>
      <% i += 1 %>
      <% end %>
    </div>

      <% if @admin.designs.count % 3 != 0 %> </div> <% end %>
</div>

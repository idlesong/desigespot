<%- model_class = Product -%>

<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-6 col-md-6">
        <div id="profile-widget" class="panel">
          <div class="panel-image">
            <a href="#"><%= image_tag("bg-large.jpg", class: "panel-image-preview")%></a>
          </div>
          <div class="panel-body">
            <div class="media">
              <div class="media-body">
                <div class="list-block">
                  <ul>
                    <li><%= image_tag("80x80.png") %></li>
                    <li><%= image_tag("80x80.png") %></li>
                    <li><%= image_tag("80x80.png") %></li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-12 col-md-6">
        <div>
          <h2><%= @product.name %></h2>
          <h4><%= @product.description %><h4>
          <dl class="dl-horizontal">
            <dt><strong><%= model_class.human_attribute_name(:catalog) %>:</strong></dt>
            <dd><%= @product.catalog %></dd>
            <dt><strong><%= model_class.human_attribute_name(:tag1) %>:</strong></dt>
            <dd><%= @product.tag1 %></dd>
            <dt><strong><%= model_class.human_attribute_name(:tag2) %>:</strong></dt>
            <dd><%= @product.tag2 %></dd>
            <dt><strong><%= model_class.human_attribute_name(:tag3) %>:</strong></dt>
            <dd><%= @product.tag3 %></dd>
          </dl>
        </div>
        <div >
          <ul class="list-unstyled">
            <li>
              <h3>价格：¥<%= @product.price %></h3>
              Shares Traded
            </li>
            <li>
              <h3>选择款式：荷荷美美 ｜ 家和万事兴 ｜ 荷气生财</h3>
              Market Cap
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-body">


<div class="tabbable-panel">
  <div class="tabbable-line">
    <ul class="nav nav-tabs ">
      <li class="active">
        <a href="#tab_default_1" data-toggle="tab">
          实际案例 </a>
      </li>
      <li>
        <a href="#tab_default_2" data-toggle="tab">
          最佳组合 </a>
        </li>
    </ul>
    <div class="tab-content">
      </br>
      <div class="tab-pane active" id="tab_default_1">

        <div class="row">
          <% 4.times do %>
          <div class="col-md-3 col-sm-3">
            <div class="feature animated" data-animtype="fadeInLeft"
            data-animrepeat="0"
            data-speed="1s"
            data-delay="0s">
              <div class="feature-image img-overlay">
                <%= image_tag("design_demo.png") %>
                <div class="item-img-overlay">
                  <a class="portfolio-zoom fa fa-plus" href="images/placeholders/office-image-placeholder.jpg"
                  data-rel="prettyPhoto[portfolio]" title="Title goes here"></a>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <div class="tab-pane" id="tab_default_2">
        <p>
          Howdy, I'm in Tab 2.
        </p>
      </div>
    </div>
  </div>
</div>


    <div class="panel-body">
      <%= image_tag("default_final.jpg") %>
      </br>
      <%= image_tag("bg-large.jpg") %>
      </br>
      <%= image_tag("bg_profile.jpg") %>
    </div>

  </div>
</div>


<%= link_to t('.back', :default => t("helpers.links.back")),
              products_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_product_path(@product), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              product_path(@product),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<%- model_class = Product -%>
<div class="">
  <div class="row">
    <div class="col-md-12 col-sm-12">
      <div id="nav-widget" class="btn-group btn-group-justified">
        <div class="btn-group">
          <button type="button" class="btn text-uppercase"><i class="fa fa-map-marker fa-2x"></i> 饰品摆件</button>
        </div>
        <div class="btn-group">
          <button type="button" class="btn text-uppercase"><i class="fa fa-bell fa-2x"></i>  花艺园艺</button>
        </div>
        <div class="btn-group">
          <button type="button" class="btn text-uppercase"><i class="fa fa-user fa-2x"></i>  装饰画</button>
        </div>
        <div class="btn-group">
          <button type="button" class="btn text-uppercase"><i class="fa fa-cog fa-2x"></i>  毯子</button>
        </div>

        <div class="btn-group">
          <button type="button" class="btn text-uppercase"><i class="fa fa-user fa-2x"></i>  布艺</button>
        </div>
        <div class="btn-group">
          <button type="button" class="btn text-uppercase"><i class="fa fa-cog fa-2x"></i>  灯具</button>
        </div>
      </div>
    </div>
  </div>
</div>

<% i = 0 %>
<% k = (@products.count - 1) %>
<% @products.each do |product| %>

  <% if i % 3 == 0 %>
    <div class="row animated">
  <% end %>

  <div class="col-md-4 col-ms-4">
    <div class="feature animated" data-animtype="fadeIn" data-animrepeat="0" data-animspeed="1s" data-animdelay="0s">
      <div class="feature-image img-overlay">
        <!-- <img src="images/placeholders/blog1.jpg" alt=""/> -->
        <%= image_tag("design_demo.png") %>

        <div class="item-img-overlay">
          <a class="portfolio-zoom fa fa-plus" href= <%= product_path(product) %>
          data-rel="prettyPhoto[portfolio]" title="Title goes here"></a>
        </div>
      </div>

      <div class="feature-content">
        <h3 class="h3-body-title blog-title">
          <!-- <a href="">Vix sumo ferri an</a> -->
          <%= link_to(product.name, product_path(product)) %>
        </h3>
        <p>
          <%= product.description %>
          <!-- Donec pede justo, fringilla vel, aliquet nec, vulputate eget, arcu.
          In enim justo, rhoncus ut, imperdiet a [...] -->
        </p>
      </div>

      <div class="feature-details">
        <i class="icon-calendar"></i>
        <span>July 10, 2013</span>
        <span class="details-seperator"></span>

        <a href="#"><i class="icon-comment"></i><span>4</span></a>

        <div class="feature-share">
          <a href="#"><i class="icon-heart"></i></a>
          <a href="#"><i class="icon-facebook"></i></a>
        </div>
      </div>
    </div>
  </div>

  <% if ((i == k) or (i % 3 == 2)) %>  </div> </br><% end %>
  <% i = i + 1 %>

<% end %>


<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:catalog) %></th>
      <th><%= model_class.human_attribute_name(:tag1) %></th>
      <th><%= model_class.human_attribute_name(:tag2) %></th>
      <th><%= model_class.human_attribute_name(:tag3) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.id, product_path(product) %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.catalog %></td>
        <td><%= product.tag1 %></td>
        <td><%= product.tag2 %></td>
        <td><%= product.tag3 %></td>
        <td><%=l product.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>

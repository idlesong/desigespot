<div class="row">
  <div class="col-xs-6 col-md-4">

    <div class="list-group">
      <a href="#" class="list-group-item disabled">软装商品库</a>
      <a href="#" class="list-group-item">墙纸</a>
      <a href="#" class="list-group-item">壁画</a>
      <a href="#" class="list-group-item">窗帘</a>
      <a href="#" class="list-group-item">屏风</a>
      <a href="#" class="list-group-item">灯饰</a>
    </div>

  </div>

  <div class="col-xs-6 col-md-8">

    <%- model_class = Product -%>
    <div class="page-header">
      <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
    </div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:id) %></th>
          <th><%= model_class.human_attribute_name(:name) %></th>
          <th><%= model_class.human_attribute_name(:catalog) %></th>
          <th><%= model_class.human_attribute_name(:tag1) %></th>
          <th><%= model_class.human_attribute_name(:tag2) %></th>
          <th><%= model_class.human_attribute_name(:tag3) %></th>
          <th><%= model_class.human_attribute_name(:created_at) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= link_to product.id, product_path(product) %></td>
            <td><%= product.name %></td>
            <td><%= product.catalog %></td>
            <td><%= product.tag1 %></td>
            <td><%= product.tag2 %></td>
            <td><%= product.tag3 %></td>
            <td><%=l product.created_at %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_product_path(product), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          product_path(product),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_product_path,
                :class => 'btn btn-primary' %>

  </div>
</div>

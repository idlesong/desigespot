<div id="profile-widget" class="panel classic-form">
  <div class="panel-image">
    <%= image_tag("", :class=>"panel-image-preview")%>
  </div>
  <div class="panel-body">
    <div class="media">
      <a class="pull-left" href="#">
        <img class="media-object img-circle"  src=<%= @designer.avatar.url %>>
      </a>
      <div class="media-body">
        <h2 class="media-heading"><%= @designer.name %></h2>
        <span>设计宣言：Beautiful is a life style, I will look it for ever!
        </span>

        </br>
        <span>
          所在地：<%= @designer.location %>
          擅长户型：<%= @designer.prefer_household %>
          擅长风格：<%= @designer.prefer_style %>
          <%= link_to 'edit', edit_designer_path(@designer), :class =>"btn btn-sm" %>
        </span>
      </div>
    </div>

    <div class="section-content section-tabs section-px stones-bg white-text">
      <div class="tab-container">
        <div class="section-tab-arrow"></div>
        <div class="section-etabs-container">
          <ul class="section-etabs">
            <li class="tab active">
              <a href="#tabc1"> Designs(12)</a>
            </li>
            <li class="tab">
              <a href="#tabc2"> Topics(3)</a>
            </li>
            <li class="tab">
              <a href="#tabc3"> Likes(172)</a>
            </li>
          </ul>
        </div>
      </div>
    </div>

  </div>
</div>



<p id="notice"><%= notice %></p>

<div class="loading-container">
  <div class="spinner">
    <div class="double-bounce1"></div>
    <div class="double-bounce2"></div>
  </div>
</div>

<div class="content-wrapper hide-until-loading">
  <div class="body-wrapper">
    <div class="container">

    <% i=0 %>
    <% k = @designer.designs.count -1 %>
    <% @designer.designs.each do |design| %>
      <% if i % 3 == 0%>
        <div class="row animated" data-animtype="fadeInUp" data-animrepeat="0"
        data-animdelay="0.4s">
      <% end %>

      <div class="col-md-4 col-ms-4">
        <div class="feature animated" data-animtype="fadeIn" data-animrepeat="0" data-animspeed="1s" data-animdelay="0s">
          <div class="feature-image img-overlay">

            <%= image_tag(design.pic.url) %>

            <div class="item-img-overlay">
              <a class="portfolio-zoom fa fa-plus" href= ""
              data-rel="prettyPhoto[portfolio]" title="Title goes here"></a>
            </div>
          </div>

          <div class="feature-content">
            <h3 class="h3-body-title blog-title">
              <a href=""><%= design.name %> [<%= design.household %>][上海嘉定－江桥]</a>
            </h3>
            <p>
              <%= i %>
              Donec pede justo, fringilla vel, aliquet nec, vulputate eget, arcu.
              In enim justo, rhoncus ut, imperdiet a [...]
            </p>
          </div>

          <div class="feature-details">
            <i class="icon-calendar"></i>
            <span>July 10, 2013</span>
            <span class="details-seperator"></span>

            <a href="#"><i class="icon-comment"></i><span>4</span></a>

            <div class="feature-share">
              <a href="#"><i class="icon-heart"></i></a>
              <a href="#"><i class="icon-facebook"></i></a>
            </div>
          </div>
        </div>
      </div>


      <% if ((i % 3 == 2) or (i == k)) %>  </div> </br><% end %>
      <% i = i + 1 %>
    <% end %>
    </div>
  </div>
</div>

<% @designers.each do |designer| %>
  <div class="row">
    <div class="col-xs-6 col-md-2">
      <div class="thumbnail">
        <%= link_to  designer do %>
          <%= image_tag("designer_demo.png", :alt => "show", :class => "show") %>
        <% end %>
      </div>
    </div>

    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <p><%= designer.name %> 已认证</p>
          <p>擅长空间-<%= designer.prefer_household %></p>
          <p>擅长风格-<%= designer.prefer_style %></p>
          <p>关注，作品：313 <img src="assets/follow.png" alt="img1"></p>
        </div>

      </div>
    </div>

    <% i=0 %>
    <% designer.designs.each do |design| %>
      <% i=i+1 %>
      <% if i < 4 %>
      <div class="col-xs-6 col-md-2">
        <div class="thumbnail">
          <%= link_to  design do %>
          <%= image_tag("design_demo.png", :alt => "show", :class => "show") %>
          <% end %>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>

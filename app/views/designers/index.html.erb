<h1>Listing designers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sex</th>
      <th>Prefer style</th>
      <th>Prefer household</th>
      <th>Photo</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @designers.each do |designer| %>
      <tr>
        <td><%= designer.name %></td>
        <td><%= designer.sex %></td>
        <td><%= designer.prefer_style %></td>
        <td><%= designer.prefer_household %></td>
        <td><%= designer.photo %></td>
        <td><%= designer.location %></td>
        <td><%= link_to 'Show', designer %></td>
        <td><%= link_to 'Edit', edit_designer_path(designer) %></td>
        <td><%= link_to 'Destroy', designer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

